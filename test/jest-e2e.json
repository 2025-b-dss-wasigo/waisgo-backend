{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testRegex": ".*\\.e2e-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "tsconfig": "<rootDir>/test/tsconfig.jest.json"
      }
    ]
  },
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/test/setup-e2e.ts"],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  }
}
